{
    "compilerOptions": {
      "declaration": true,
      "declarationDir": "./dist/types",
      "outDir": "./dist/",
      "noImplicitAny": true,
      "module": "CommonJS",
      "target": "es5",
      "allowJs": true,
      "moduleResolution": "node",
      "strictNullChecks": false,
      "strict": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "baseUrl": ".",
      "paths": {
        "*": [
          "node_modules/*"
        ],
        "indesign": [
          "node_modules/indesign"
        ],
        "photoshop": [
          "node_modules/photoshop"
        ],
        "uxp": [
          "node_modules/uxp"
        ],
        "os": [
          "node_modules/os"
        ]
      }
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
    ]
  }